# ==============================================
# HACKSPREE WALLET APPLICATION CONFIGURATION
# ==============================================

# Application Settings
NODE_ENV=development
PORT=5000
APP_NAME="Hackspree Wallet"
APP_VERSION=1.0.0
API_BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/hackspree
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=hackspree
MONGODB_USERNAME=
MONGODB_PASSWORD=
MONGODB_AUTH_DB=admin
MONGODB_MAX_POOL_SIZE=10

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_URL=redis://localhost:6379

# JWT & Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-256-bits
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_SALT_ROUNDS=12

# Square Payment Configuration
SQUARE_APPLICATION_ID=your-square-application-id
SQUARE_ACCESS_TOKEN=your-square-access-token
SQUARE_WEBHOOK_SIGNATURE_KEY=your-square-webhook-signature-key
SQUARE_ENVIRONMENT=sandbox
SQUARE_LOCATION_ID=your-square-location-id

# Email Configuration (SendGrid/Nodemailer)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@hackspree.com
SENDGRID_FROM_NAME="Hackspree Wallet"

# SMTP Configuration (Alternative to SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload & Storage
UPLOAD_DIRECTORY=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=hackspree-uploads

# Rate Limiting
RATE_LIMIT_GENERAL=100
RATE_LIMIT_AUTH=10
RATE_LIMIT_TOPUP=5
RATE_LIMIT_TRANSFER=10
RATE_LIMIT_PAYMENT=8

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_DIRECTORY=./logs
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Security Configuration
HELMET_ENABLED=true
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret
COOKIE_SECRET=your-cookie-secret
CSRF_SECRET=your-csrf-secret

# API Keys & External Services
GOOGLE_MAPS_API_KEY=your-google-maps-key
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_DIR=./backups
BACKUP_ENCRYPTION=true
BACKUP_ENCRYPTION_KEY=your-32-character-encryption-key
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Cloud Storage for Backups
CLOUD_PROVIDER=none
AWS_S3_BACKUP_BUCKET=hackspree-backups
GCP_BACKUP_BUCKET=hackspree-backups
AZURE_BACKUP_CONTAINER=hackspree-backups

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Notification Configuration
NOTIFICATION_ENABLED=true
SLACK_WEBHOOK_URL=your-slack-webhook
DISCORD_WEBHOOK_URL=your-discord-webhook
TELEGRAM_BOT_TOKEN=your-telegram-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Development Tools
DEBUG=hackspree:*
MOCK_PAYMENTS=false
SEED_DATABASE=false
API_DOCS_ENABLED=true
SWAGGER_ENABLED=true

# Performance & Caching
CACHE_TTL=3600
COMPRESSION_ENABLED=true
GZIP_LEVEL=6

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000

# Database Migration
MIGRATION_AUTO_RUN=false
MIGRATION_BACKUP=true
MIGRATION_BACKUP_DIR=./backups/migrations

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# Feature Flags
FEATURE_CLUBS_ENABLED=true
FEATURE_EVENTS_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_ADVANCED_SECURITY=false
